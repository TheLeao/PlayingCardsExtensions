<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>PlayingCardsExtensions</PackageId>
    <Version>1.0</Version>
    <Authors>Filipe de Leao Beck</Authors>
    <Company>The Leao</Company>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>Class library with built-in functions for creating and managing decks of cards, expandable for different card games. (Uno, MTG, Hearthstone etc)</Description>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageTags>PlayingCards, card, deck</PackageTags>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <PackageIcon>icon.png</PackageIcon>
    <Copyright>Copyright</Copyright> 
    <Summary>Class library with built-in functions for creating and managing decks of cards, expandable for different card games. (Uno, MTG, Hearthstone etc)</Summary>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Update="icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
